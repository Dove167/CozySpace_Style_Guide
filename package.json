{
  "name": "cozy-space",
  "version": "0.5.0",
  "description": "A monorepo template built with Bun, Hono, Vite, and React",
  "author": "Steve Simkins",
  "license": "MIT",
  "homepage": "https://github.com/stevedylandev/bhvr",
  "packageManager": "bun@1.2.20",
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "build:full": "turbo build --filter=client --filter=shared --filter=server && bun run copy:client",
    "copy:client": "xcopy client\\dist server\\dist\\public /E /I /Y",
    "start": "cd server && bun run start",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test"
  },
  "keywords": [
    "bun",
    "hono",
    "react",
    "vite",
    "monorepo",
    "turbo"
  ],
  "devDependencies": {
    "bun-types": "latest",
    "turbo": "^2.5.5",
    "fdir": "^6.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "hono": "^4.10.3"
  }
}
